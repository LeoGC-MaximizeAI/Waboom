---
import Icon from './Icon.astro';
---

<section class="box skills" aria-labelledby="skills-heading" itemscope itemtype="https://schema.org/ItemList">
	<h2 id="skills-heading" class="sr-only">Our Core Capabilities</h2>
	<meta itemprop="numberOfItems" content="3" />
	<meta itemprop="name" content="Waboom AI Core Capabilities" />

	<div class="stack gap-2 lg:gap-4" data-aos="fade-up" data-aos-delay="0" itemprop="itemListElement" itemscope itemtype="https://schema.org/ListItem">
		<meta itemprop="position" content="1" />
		<div class="icon-hover" aria-hidden="true">
			<Icon icon="code" color="var(--accent-regular)" size="2.5rem" gradient />
		</div>
		<h3 itemprop="name">AI-Powered Solutions</h3>
		<p itemprop="description">Custom AI modules for invoice processing, purchase orders, and workflow automation that adapt to your business needs.</p>
	</div>

	<div class="stack gap-2 lg:gap-4" data-aos="fade-up" data-aos-delay="200" itemprop="itemListElement" itemscope itemtype="https://schema.org/ListItem">
		<meta itemprop="position" content="2" />
		<div class="icon-hover" aria-hidden="true">
			<Icon icon="rocket-launch" color="var(--accent-regular)" size="2.5rem" gradient />
		</div>
		<h3 itemprop="name">Rapid Implementation</h3>
		<p itemprop="description">Quick deployment of automation solutions that integrate seamlessly with your existing ERP systems and workflows.</p>
	</div>

	<div class="stack gap-2 lg:gap-4" data-aos="fade-up" data-aos-delay="400" itemprop="itemListElement" itemscope itemtype="https://schema.org/ListItem">
		<meta itemprop="position" content="3" />
		<div class="icon-hover" aria-hidden="true">
			<Icon icon="strategy" color="var(--accent-regular)" size="2.5rem" gradient />
		</div>
		<h3 itemprop="name">Strategic Partnership</h3>
		<p itemprop="description">End-to-end support from initial consultation through implementation, training, and ongoing optimization.</p>
	</div>

	<!-- Add structured data for skills section -->
	<script type="application/ld+json">
		{
			"@context": "https://schema.org",
			"@type": "ItemList",
			"name": "Waboom AI Core Capabilities",
			"itemListElement": [
				{
					"@type": "ListItem",
					"position": 1,
					"name": "AI-Powered Solutions",
					"description": "Custom AI modules for invoice processing, purchase orders, and workflow automation that adapt to your business needs."
				},
				{
					"@type": "ListItem",
					"position": 2,
					"name": "Rapid Implementation",
					"description": "Quick deployment of automation solutions that integrate seamlessly with your existing ERP systems and workflows."
				},
				{
					"@type": "ListItem",
					"position": 3,
					"name": "Strategic Partnership",
					"description": "End-to-end support from initial consultation through implementation, training, and ongoing optimization."
				}
			]
		}
	</script>
</section>

<style>
	.box {
		border: 1px solid var(--gray-800);
		border-radius: 0.75rem;
		padding: 1.5rem;
		background-color: var(--gray-999_40);
		box-shadow: var(--shadow-sm);
	}

	.sr-only {
		position: absolute;
		width: 1px;
		height: 1px;
		padding: 0;
		margin: -1px;
		overflow: hidden;
		clip: rect(0, 0, 0, 0);
		white-space: nowrap;
		border: 0;
	}

	.skills {
		display: flex;
		flex-direction: column;
		gap: 3rem;
		text-align: center;
	}

	.skills .stack {
		height: 100%;
		display: flex;
		flex-direction: column;
		align-items: center;
	}

	.skills h3 {
		font-size: var(--text-lg);
		height: 1.5em;
		display: flex;
		align-items: center;
		justify-content: center;
		margin: 0;
		margin-top: 0.5rem;
		width: 100%;
		white-space: nowrap;
	}

	.skills p {
		color: var(--gray-400);
		margin: 0;
		flex-grow: 1;
	}

	.icon-hover {
		transition: transform 0.3s ease;
		margin-bottom: 1.5rem;
	}

	.stack:hover .icon-hover {
		transform: scale(1.2) rotate(5deg);
	}

	.stack {
		transition: transform 0.3s ease, box-shadow 0.3s ease;
		padding: 1.5rem;
		border-radius: 0.75rem;
	}

	.stack:hover {
		transform: translateY(-5px);
		box-shadow: var(--shadow-md);
	}

	@media (min-width: 50em) {
		.box {
			border-radius: 1.5rem;
			padding: 2.5rem;
		}

		.skills {
			display: grid;
			grid-template-columns: repeat(3, 1fr);
			gap: 5rem;
		}

		.skills h3 {
			font-size: var(--text-xl);
			height: 1.2em;
		}

		.stack {
			padding: 2rem;
		}
	}
</style>
